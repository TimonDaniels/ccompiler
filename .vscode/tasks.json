{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build main",
            "command": "C:/mingw64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/compiler/main.c",
                "-o",
                "${workspaceFolder}/compiler/main.exe",
                "-I",
                "${workspaceFolder}/compiler"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build the Parser project"
        }
    ],
    "version": "2.0.0"
}